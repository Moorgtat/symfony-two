{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire n°{{ comment.id }}{% endblock %}

{% block body %}
<div class="container">
    <h3 class="my-5">Modification du commentaire n°{{ comment.id }}</h3>
    	
        <div class="alert alert-info">
            <strong>Annonce liée : </strong> {{ comment.product.title }} <br>
            <strong>Auteur: </strong> {{ comment.author.fullName }} <br>
            <strong>Date de création: </strong> {{ comment.createdAt | date('d/m/Y')}} <br>
             <strong>Note donnée: </strong> {{ comment.rating }}
        </div>
        
        {{ form_start(form) }}
        {{ form_widget(form) }}
           <button type="submit" class="btn btn-primary">
           <i class="fas fa-check"></i>
           Enregistrer les modifications
           </button>
		{{ form_end(form) }}
</div>    
{% endblock %}