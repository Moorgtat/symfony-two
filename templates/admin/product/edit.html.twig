{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce {{ product.id}}{% endblock %}

{% form_theme form _self %}

{% block body %}
<div class="container">
    <h3 class="my-5">Modification de l'annonce {{ product.title }}</h3>
    	{{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">
                        Modifier l'annonce?
                        </h4>
                    </div>
                    <div class="card-body">
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i>
                   Enregistrer les modifications</button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">
                        Les réservations:
                        </h4>
                    </div>
                    <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Créé le</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for booking in product.bookings %}
                            <tr>
                                <td>{{ booking.id }}</td>
                                <td>{{ booking.booker.fullName }}</td>
                                <td>{{ booking.createdAt | date('d/m/Y') }}</td>
                                <td>
                                <a href="" class="btn btn-primary">
                                    <i class="fas fa-pen"></i>
                                </a>
                                </td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
                    </div>
                </div>
                <div class="card bg-light mt-4">
                    <div class="card-header">
                        <h4 class="card-title">
                        Les commentaires:
                        </h4>
                    </div>
                    <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in product.comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.author.fullName }}</td>
                                <td>{{ comment.rating }}</td>
                                <td>{{ comment.content }}</td>
                                <td>
                                <a href="" class="btn btn-primary">
                                    <i class="fas fa-pen"></i>
                                </a>
                                </td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
		{{ form_end(form) }}
</div>    
{% endblock %}

{% block _product_images_widget %}
    {{ form_widget(form) }}
{% endblock %}

{% block _product_images_entry_row %}
    <div id="block_{{id}}">
    {{ form_widget(form) }}
    </div>
{% endblock %}

{% block _product_images_entry_widget %}
    <div class="row align-items-center">
        <div class="col-4">
        {% if value %}
            <img src="{{ value.url }}" alt="" class="img-fluid mt-1">
        {% endif %}
            {{ form_row(form.url) }}
        </div>
        <div class="col-6">
            {{ form_row(form.caption) }}
        </div>
        <div class="col">
            <button type="button" class="btn btn-danger mt-2" data-action="delete"
            data-target="#block_{{id}}">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }} 
<script>
    $(document).ready(function() {
        let $input = $('input[name$="[url]"]')
        $input.attr('type', 'hidden')
        let $label = $('label[for$="url"]')
        $label.remove()
        $('[data-action="delete"]').on('click', function() {
            const target =$(this).data('target');
            $(target).remove();
        })
    });
</script>
{% endblock %}