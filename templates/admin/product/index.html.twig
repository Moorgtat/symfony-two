{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>RÃ©servation</th>
                <th>Note</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{product.id}}</td>
                <td>{{product.title}}</td>
                <td class="align-middle">
                    <img src="{{ product.author.picture }}" alt="Avatar de {{ product.author.fullName }}" class="avatar avatar-mini mr-2">
                    {{product.author.fullname}}
                </td>
                <td class="align-middle">
                    <span class="badge badge-primary rounded">{{product.bookings | length}}</span>
                </td>
                <td class="align-middle">
                    <span class="badge badge-primary rounded">{{product.avgRatings | number_format(1, ',', '') }}</span>
                </td>
                <td>
                <a href="{{ path('admin_products_edit', { 'id': product.id }) }}" class="btn btn-primary mb-1"> <i class="fas fa-edit"></i> </a>
                 <a href="{{ path('admin_products_delete', { 'id': product.id }) }}" class="btn btn-danger"> <i class="fas fa-trash"></i> </a>
                </td>
            </tr>
        {% endfor %}    
        </tbody>
    </table>
</div>
{% endblock %}
